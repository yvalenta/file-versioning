<%= form_for ([@file_upload, @file_version]), :html => { :class => "form-horizontal file_version" } do |f| %>

  <% if @file_version.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@file_version.errors.count, "error") %> prohibited this file_version from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @file_version.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :file_version, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :file_version, :class => 'form-control' %>
    </div>
    <%=f.error_span(:file_version) %>
  </div>
  <div class="form-group">
    <%= f.label :file_type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :file_type, required: true %>
    </div>
    <%=f.error_span(:file_type) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                file_uploads_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
